@(Html.DevExtreme().TreeList<OrganizationVM>()
    .ID("organizations")
    .DataSource(ds => ds.Mvc()
        .Controller("Organizations")
        .LoadAction("Get")
        .UpdateAction("Put")
        .InsertAction("Post")
        .DeleteAction("Delete")
        .Key("Id")
    )
    .KeyExpr("Id")
    .ParentIdExpr("ParentId")
    .ShowRowLines(true)
    .ShowBorders(true)
    .Editing(editing => editing
        .Mode(GridEditMode.Form)
        .AllowUpdating(true)
        .AllowAdding(true)
    )
    .Columns(columns =>
    {
      columns.AddFor(m => m.Name);

      columns.AddFor(m => m.Location);

      columns.AddFor(m => m.Description);

      columns.AddFor(m => m.IsActive);

      columns.AddFor(m => m.Id).Visible(false);

      columns.AddFor(m => m.ParentId)
          .Width(150)
          .Visible(false)
          .Lookup(lookup => lookup
              .DataSource(ds => ds.Mvc().Controller("Organizations").LoadAction("Get").Key("Id"))
              .DataSourceOptions(dso => dso.Sort(sort => sort.AddSorting("Id")))
              .ValueExpr("Id")
              .DisplayExpr("Name")
          );

      columns.Add()
          .Type(TreeListCommandColumnType.Buttons)
          .Buttons(b =>
          {
            b.Add().Name(TreeListColumnButtonName.Edit);
          });
    })
    .ColumnAutoWidth(true)
    .AutoExpandAll(true)
)